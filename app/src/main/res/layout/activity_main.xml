<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/emoticons_view">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/emotion_back" />

        <com.jil.livevideoemotion.EmotionsView
            android:id="@+id/custom_view"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/emoticons_view_height" />
    </FrameLayout>


    <LinearLayout
        android:id="@+id/emoticons_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/like_emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:src="@drawable/likeemotion" />

        <ImageView
            android:id="@+id/love_emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:src="@drawable/loveemotion" />

        <ImageView
            android:id="@+id/haha_emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@null"
            android:src="@drawable/laughingemotion" />

        <ImageView
            android:id="@+id/wow_emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:src="@drawable/wowemotion" />

        <ImageView
            android:id="@+id/sad_emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:src="@drawable/sademotion" />

        <ImageView
            android:id="@+id/angry_emoticon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:src="@drawable/angryemotion" />

    </LinearLayout>

</RelativeLayout>

